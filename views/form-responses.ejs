<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Responses - <%= form.title %></title>
  <link rel="stylesheet" href="/styles/form-responses.css">
</head>
<body>
  <div class="responses-container">
    <h1 class="responses-title">Responses for "<%= form.title %>"</h1>

    <% if (responses.length === 0) { %>
      <p class="no-responses">No one has submitted this form yet.</p>
    <% } else { %>

      <div class="export-button-container">
        <a href="/form/<%= form._id %>/export" class="export-button">
          ⬇️ Export to CSV
        </a>
      </div>

      <div class="table-container">
        <table class="response-table">
          <thead>
            <tr>
              <th>#</th>
              <% form.questions.forEach((q, i) => { %>
                <th>Q<%= i+1 %>: <%= q %></th>
              <% }) %>
              <th>Submitted At</th>
            </tr>
          </thead>
          <tbody>
            <% responses.forEach((res, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <% res.answers.forEach((ans) => { %>
                  <td><%= ans %></td>
                <% }) %>
                <td><%= res.submittedAt.toLocaleString() %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <div class="back-link">
      <a href="/dashboard">← Back to Dashboard</a>
    </div>
  </div>
</body>
</html>
