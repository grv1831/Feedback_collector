<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Home</title>
  <link rel="stylesheet" href="/styles/index.css">
</head>
<body class="home-body">

  <div class="home-container">
    <h1 class="main-heading">Welcome ðŸ‘‹</h1>

    <div class="auth-buttons">
      <% if (!user) { %>
        <a href="/create" class="btn btn-primary">Admin Sign Up</a>
        <a href="/login" class="btn btn-secondary">Admin Login</a>
      <% } else { %>
        <a href="/dashboard" class="btn btn-dashboard">Go to Dashboard</a>
        <form method="POST" action="/logout">
          <button class="btn btn-logout">Logout</button>
        </form>
      <% } %>
    </div>

    <div class="form-section">
      <h2 class="section-heading">Available Feedback Forms</h2>

      <% if (forms.length === 0) { %>
        <p class="no-forms">No forms available yet.</p>
      <% } else { %>
        <ul class="form-list">
          <% forms.forEach(form => { %>
            <li class="form-item">
              <span class="form-title"><%= form.title %></span>
              <a href="/form/<%= form._id %>" class="btn btn-fill">Fill</a>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>

</body>
</html>
