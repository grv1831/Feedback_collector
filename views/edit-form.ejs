<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Form</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 py-10 px-4">
  <div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <h1 class="text-2xl font-bold text-center mb-6 text-indigo-600">Edit Form</h1>

    <form action="/form/<%= form._id %>/edit" method="POST" id="editForm">
      <div class="mb-4">
        <label class="block mb-1 font-semibold">Form Title</label>
        <input type="text" name="title" value="<%= form.title %>" class="w-full border px-3 py-2 rounded" required>
      </div>

      <div id="questions">
        <% form.questions.forEach((q, index) => { %>
          <div class="mb-3 flex gap-2">
            <input type="text" name="questions[]" value="<%= q %>" class="w-full border px-3 py-2 rounded" required>
            <button type="button" onclick="removeQuestion(this)" class="bg-red-500 text-white px-2 rounded">X</button>
          </div>
        <% }) %>
      </div>

      <button type="button" onclick="addQuestion()" class="mb-4 bg-green-500 text-white px-4 py-1 rounded">+ Add Question</button>

      <div class="flex justify-between mt-4">
        <a href="/dashboard" class="text-indigo-600 underline">⬅️ Go Back</a>
        <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Save Changes</button>
      </div>
    </form>
  </div>

  <script>
    function addQuestion() {
      const div = document.createElement('div');
      div.className = "mb-3 flex gap-2";
      div.innerHTML = `
        <input type="text" name="questions[]" class="w-full border px-3 py-2 rounded" required>
        <button type="button" onclick="removeQuestion(this)" class="bg-red-500 text-white px-2 rounded">X</button>
      `;
      document.getElementById('questions').appendChild(div);
    }

    function removeQuestion(btn) {
      btn.parentElement.remove();
    }
  </script>
</body>
</html>
